{
  "name": "travel-agent",
  "version": "0.1.0",
  "description": "Personal travel planning agent (chat + markdown itinerary)",
  "main": "server/server.ts",
  "type": "module",
  "scripts": {
    "dev": "lsof -ti:${PORT:-3001} | xargs kill -9 2>/dev/null; bun --watch server/server.ts",
    "start": "bun run server/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "cli": "bun run scripts/cli.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "latest",
    "dotenv": "^17.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "resend": "^6.8.0",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/bun": "^1.2.21",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "typescript": "^5.9.2"
  }
}
